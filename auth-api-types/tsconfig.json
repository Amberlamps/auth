{
    "compilerOptions": {
        "target": "ESNEXT",
        "declaration": false,
        "noEmit": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}